        {
          "type": "product-name",
          "fontSize": "sm",
          "fontWeight": "medium"
        },
        {
          "type": "price",
          "fontSize": "md",
          "fontWeight": "bold"
        }
      ]
    },
    "products": [
      {
        "name": "Vintage Dining Set",
